
<%=form_for(@sticker,:url=>sticker_number_path) do |f| %>


    <%= f.text_field :vichel_no,{:class=>'form-control',:placeholder=>'Sticker Number',:required=>true,:readonly=>true} %>
    <br>
    <%= f.text_field :sticker,{:class=>'form-control',:placeholder=>'Sticker Number',:required=>true} %>
    <br>
    <%=f.button "approve",:name=>"commit",:value=>"Submit",:class=>'btn btn-sm btn-success',:remote=>true %>



  <% end %>

<%=form_for([@current_user,@remark],:url=>remark_path) do |f| %>


  <%= f.text_field :vichel_no,{:class=>'form-control',:placeholder=>'Sticker Number',:required=>true,:readonly=>true} %>
  <br>
  <% if @current_user.phase1 == true %>
    <%= f.text_field :phase1_remark,{:class=>'form-control',:placeholder=>'Remark',:required=>true}
    %>
    <br>

    <%=f.button "approve",:name=>"commit",:value=>"Submit",:class=>'btn btn-sm btn-success',:remote=>true %>
  <% elsif @current_user.phase2 == true %>
    <%= f.text_field :phase2_remark,{:class=>'form-control',:placeholder=>'Remark',:required=>true} %>
    <br>

    <%=f.button "approve",:name=>"commit",:value=>"Submit",:class=>'btn btn-sm btn-success',:remote=>true %>
  <% elsif @current_user.phase3 == true %>
    <%= f.text_field :phase3_remark,{:class=>'form-control',:placeholder=>'Remark',:required=>true} %>
    <br>

    <%=f.button "disapprove",:name=>"commit",:value=>"Submit",:class=>'btn btn-sm btn-success',:remote=>true %>

  <%end%>
<% end %>