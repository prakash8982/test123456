


<div class="d-flex" id="wrapper">
  <!-- Sidebar -->
  <div class="bg-light border-right" id="sidebar-wrapper">
    <div class="sidebar-heading"><img id="previewHolder" src="<%= @user_profile.photo.url %>" class="rounded-circle" alt="Uploaded Image Preview Holder" width="200px" height="200px" />
    </div>
    <div class="list-group list-group-flush">
      <a class="list-group-item list-group-item-action bg-light"><h5><%= @user_profile.name %></h5></a>
      <a  class="list-group-item list-group-item-action bg-light"><h5><%= @user_profile.department %></h5></a>
      <a  class="list-group-item list-group-item-action bg-light"><h5><%= @user_profile.mobile_no %></h5></a>

    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
      <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


    </nav>

    <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
      <thead>
      <tr>
        <th>Vehicle Number</th>
        <th>Vehicle Type</th>
        <th>Vehicle Model</th>
        <th>RCHolder Name</th>
        <th>Show</th>
        <th>Security Incharger</th>
        <th>Respective</th>
        <th>Sticker Number</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <%  @pstaff.each_with_index do |pstaff ,index| %>
      <tr>
        <td><%=pstaff.vichel_no %></td>
        <td><%=pstaff.vehical_type %></td>
        <td><%=pstaff.vichel_model %></td>
        <td><%=pstaff.RC_holder_name %></td>
        <td> <%= link_to "show" , show_path(pstaff.id),method: :get,class:"btn btn-primary btn-sm" ,style: 'color:#FFFFFF;' %></td>

        <td><%=pstaff.phase1 %></td>
        <td><%=pstaff.phase2 %></td>
        <td><%=pstaff.sticker %></td>


        <%end %>
        </tr>


      </tbody>
    </table>

    <br>
    <%= link_to "Add",new_pstaff_path,class:"btn btn-primary btn-md",style:'color:#FFFFFF;' %>
    <!-- <%= link_to 'New User Profile', new_user_profile_path %> -->
  </div>
</div>


  <script >
      $(document).ready(function() {
          var table = $('#example').DataTable( {
              responsive: true
          } );

          new $.fn.dataTable.FixedHeader( table );
      } );
  </script>

  <script>
      $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
      });
  </script>

  <style type="text/css">


    #sidebar-wrapper {
      min-height: 100vh;
      margin-left: -15rem;
      -webkit-transition: margin .25s ease-out;
      -moz-transition: margin .25s ease-out;
      -o-transition: margin .25s ease-out;
      transition: margin .25s ease-out;
    }

    #sidebar-wrapper .sidebar-heading {
      padding: 0.875rem 1.25rem;
      font-size: 1.2rem;
    }

    #sidebar-wrapper .list-group {
      width: 15rem;
    }

    #page-content-wrapper {
      min-width: 100vw;
    }

    #wrapper.toggled #sidebar-wrapper {
      margin-left: 0;
    }

    @media (min-width: 768px) {
      #sidebar-wrapper {
        margin-left: 0;
      }

      #page-content-wrapper {
        min-width: 0;
        width: 100%;
      }

      #wrapper.toggled #sidebar-wrapper {
        margin-left: -15rem;
      }
    }
  </style>
