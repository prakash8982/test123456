<p id="notice"><%= notice %></p>

<h1>User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Unique</th>
      <th>Gender</th>
      <th>Mobile no</th>
      <th>Department</th>
      <th>Applicant type</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.name %></td>
        <td><%= user_profile.unique_id %></td>
        <td><%= user_profile.gender %></td>
        <td><%= user_profile.mobile_no %></td>
        <td><%= user_profile.department %></td>
        <td><%= user_profile.applicant_type %></td>
        <td><%= user_profile.address %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Profile', new_user_profile_path %>
