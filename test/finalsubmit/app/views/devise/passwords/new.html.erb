<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container_fluid">
    <div class="row" >
      <div class="col-sm-4">
      </div>
      <div class="col-sm-4">
        <div class="shadow-lg p-3 mb-5 bg-black rounded">
          <div class="card ">
            <div class="card-header bg-info text-white"><h5>Enter Email</h5></div>
            <div class="card-body">
  <div class="field">

    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit",class:"btn btn-primary btn-md" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>